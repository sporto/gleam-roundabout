pub fn route_to_path(route: Route) -> String {
  case route {
    Home -> "/"
    Orders -> "/" <> "orders"
    User(user_id, sub) ->
      "/" <> "users" <> "/" <> int.to_string(user_id) <> user_route_to_path(sub)
  }
}


